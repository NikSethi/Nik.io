
 
 
<table>
  <% @articles.each do |article| %>
  <td>
    <tr> <p id="title1"> <%= article.title %></p></tr>
    <tr> <p id="date"> <%= article.created_at.strftime("%B %d, %Y") %></p></tr>
    <tr>  <%= raw article.marked_text %></tr>
  </td>
  </table> 
    <p id="tags">Tags: <%= raw article.tag_list.map{|t| link_to t, tag_path(t)}.join(', ') %></p>
    <ul>
      <li><%= link_to 'Show', article_path(article) %> </li>
      <li><%= link_to 'Edit', edit_article_path(article) %> </li>
      <li><%= link_to 'Delete', article_path(article),
                    method: :delete, data: { confirm: 'Are you sure?' } %> </li>
    </ul>
    
    <hr style="height:10px">
  <% end %>